<%= form_for(@task) do |f| %>
  <div class="form-group" style="width: 300px; padding-left: 20px;">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group" style="width: 300px; padding-left: 20px;">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div style="width: 300px; padding-left: 20px;">
    <%= f.submit %>
    <% end %>
  </div>

  <div style="width: 200px; padding-left: 20px;">
    <%= link_to "Back", tasks_path %>
  </div>
